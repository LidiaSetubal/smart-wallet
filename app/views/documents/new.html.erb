<%= simple_form_for @document do |f| %>
  <div class="form-inputs mt-4 col-md-6 offset-md-3">
    <%= f.input :event_name, label: "Categoria do Documento" %>
    <%= f.check_box :renewal, label: "Documento tem validade?" %>
    <%= f.input :photo, label: "Foto do Evento", as: :file %>
      <div class="form-actions">
      <%= f.button :submit, 'Cadastre seu documento', class: 'mt-3 btn-registrar-navbar' %>
      </div>
  </div>
<% end %>
