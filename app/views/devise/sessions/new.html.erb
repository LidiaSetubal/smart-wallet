<div class="container-login col-sm-8 text-center">
  <div class="card-login">

      <div class="back-button-login">
      <%= link_to :root, class: "back-login" do %>
      <i class="fas fa-arrow-left"></i>
      <% end %>
    </div>

    <h2>Entrar</h2>
    <div class="form-login-registro">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs mt-4 col-md-6 offset-md-3">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>

            <%= f.input :password, label: "Senha",
                        required: false,
                        input_html: { autocomplete: "current-password" } %>

          <div class="checkbox">
            <%= f.input :remember_me, label: "Lembrar senha", as: :boolean if devise_mapping.rememberable?%>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Entrar", clas: "btn" %>
        </div>
      <% end %>
      <div class="my-5">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
